# Database Configuration
MONGODB_URI=mongodb://localhost:27017/cashlogix
MONGODB_TEST_URI=mongodb://localhost:27017/cashlogix_test

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d
JWT_REFRESH_EXPIRE=30d

# Server Configuration
PORT=5000
NODE_ENV=development

# Frontend URL
FRONTEND_URL=http://localhost:3000

# AI Service URL
AI_SERVICE_URL=http://localhost:8000

# Email Configuration (Nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@cashlogix.com

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key

# Payment Configuration (for future use)
VODAFONE_CASH_API_KEY=your-vodafone-cash-key
INSTAPAY_API_KEY=your-instapay-key

# Redis Configuration (for future caching)
REDIS_URL=redis://localhost:6379

# Monitoring (for future use)
SENTRY_DSN=your-sentry-dsn